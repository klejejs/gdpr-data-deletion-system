{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "indent": [
            true,
            "spaces",
            2
        ],
        "quotemark": [
            true,
            "single"
        ],
        "semicolon": [
            false,
            "always"
        ],
        "no-console": false,
        "curly": true,
        "triple-equals": true,
        "no-string-throw": true,
        "no-var-keyword": true,
        "no-trailing-whitespace": true,
        "object-literal-sort-keys": false,
        "interface-over-type-literal": false
    },
    "rulesDirectory": []
}
